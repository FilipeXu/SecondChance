@page
@model ExternalLoginModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .ExternalLogin-container {
            background-color: #C4E5C2;
            padding: 15px;
            width: 100%;
            max-width: 300px;
            border-radius: 8px;
        }

        .ExternalLogin-container h2 {
            font-size: 24px;
            margin-top: 0;
            margin-bottom: 16px;
            text-align: center;
            color: #000;
        }

        .ExternalLogin-container .text-info {
            margin-bottom: 32px;
        }

        .form-control {
            border-radius: 0;
            margin-bottom: 5px;
            background-color: #E8F5E9;
            border: 1px solid #000000;
            border-radius: 5px;
        }

        .form-control:focus {
            border-color: #000;
            outline: none;
            box-shadow: none;
        }

        .form-label {
            margin-bottom: 5px;
            color: #000;
        }

        .btn-primary {
            background-color: #68B064;
            color: #FFFFFF;
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: none;
            margin-top: 10px;
            font-weight: 600;
            border: 1px solid #000000;
        }

        .text-danger {
            color: red;
            font-size: 13px;
            margin-top: 5px;
        }

        .footer-text {
            text-align: center;
            margin-top: 15px;
            font-size: 12px;
            color: #000;
        }

        hr {
            margin: 16px 0;
            border-top: 1px solid #000;
        }
    </style>
}


<section class="ExternalLogin-container">
    <h2 id="external-login-title">Associar conta @Model.ProviderDisplayName</h2>
    <hr />

    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="mb-3">
            <label asp-for="Input.FullName" class="form-label" for="Input_FullName">Nome de usuário</label>
            <input asp-for="Input.FullName" class="form-control" id="Input_FullName"
                   autocomplete="name" aria-required="true" placeholder="Nome completo" />
            <span asp-validation-for="Input.FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.BirthDate" class="form-label" for="Input_BirthDate">Data de nascimento</label>
            <input asp-for="Input.BirthDate" class="form-control" id="Input_BirthDate"
                   autocomplete="bday" aria-required="true" placeholder="dd/mm/aaaa" />
            <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label" for="Input_Email">Email</label>
            <input asp-for="Input.Email" class="form-control" id="Input_Email"
                   autocomplete="email" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-primary">Registar</button>
        <div class="footer-text">Ao entrar no site estás a aceitar os termos e condições</div>
    </form>
</section>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
