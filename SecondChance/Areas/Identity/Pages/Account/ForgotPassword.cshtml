@page
@model ForgotPasswordModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .forgot-password-container {
            background-color: #C4E5C2;
            border: 1px solid #000;
            padding: 32px;
            width: 100%;
            max-width: 500px;
        }

            .forgot-password-container h2 {
                font-size: 24px;
                margin-top: 0;
                margin-bottom: 16px;
                text-align: center;
                color: #000;
            }

        .form-control {
            border-radius: 0;
            margin-bottom: 5px;
            background-color: #E8F5E9;
            border: 1px solid #000;
        }

            .form-control:focus {
                border-color: #000;
                outline: none;
                box-shadow: none;
            }

        .form-label {
            margin-bottom: 5px;
            color: #000;
        }

        .btn-primary {
            background-color: #68B064;
            color: #FFF;
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: none;
            margin-top: 10px;
            font-weight: 600;
        }

        .text-danger {
            color: red;
            font-size: 13px;
            margin-top: 5px;
        }

        .footer-text {
            text-align: center;
            margin-top: 15px;
            font-size: 12px;
            color: #000;
        }

        hr {
            margin: 16px 0;
            border-top: 1px solid #000;
        }
    </style>
}

<section class="forgot-password-container">
    <h2>Esqueceu a Password</h2>
    <hr />

    <form asp-page-handler="SendResetLink" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Email</label>
            <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" autocomplete="email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-primary">Enviar</button>
        <div class="footer-text">Ao entrar no site estás a aceitar os termos e condições</div>
    </form>
</section>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
