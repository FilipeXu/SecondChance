@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        .register-container {
            background-color: #C4E5C2;
            border: 1px solid #000;
            padding: 30px;
            width: 100%;
            max-width: 500px;
            margin-bottom: 100px;
        }

        .btn-social {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 45%;
            padding: 10px;
            margin: 0 5px;
            font-weight: bold;
            border-radius: 5px;
            text-decoration: none;
            border: 1px solid #000;
        }

            .btn-social i {
                margin-right: 12px;
            }

        .btn-facebook {
            background-color: #E8F5E9;
            color: #000;
        }

        .btn-google {
            background-color: #E8F5E9;
            color: #000;
        }

        .btn-login, .btn-register {
            width: 45%;
            padding: 8px 16px;
            border-radius: 5px;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
        }

        .btn-login {
            border: 1px solid #000;
            color: #000;
            background-color: #E8F5E9;
        }

        .btn-register {
            background-color: #68B064;
            color: #FFF;
            border: 1px solid #000;
        }

        .form-control {
            border-radius: 0;
            margin-bottom: 5px;
            background-color: #E8F5E9;
            border: 1px solid #000;
        }

            .form-control:focus {
                border-color: #000;
                outline: none;
                box-shadow: none;
            }

        .form-label {
            color: #000;
        }

        .btn-primary {
            background-color: #68B064;
            color: #FFF;
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #000;
            margin-top: 10px;
            font-weight: 600;
        }

        .text-danger {
            color: red;
            font-size: 13px;
            margin-top: 5px;
        }

        .footer-text {
            text-align: center;
            margin-top: 15px;
            font-size: 12px;
            color: #000;
        }

        hr {
            margin: 16px 0;
            border-top: 1px solid #000;
        }
    </style>
}

<h1>@ViewData["Title"]</h1>

<section class="register-container">
    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="d-flex justify-content-between my-4">
            <button type="submit" class="btn btn-social btn-google" name="provider" value="Google">
                <i class="fab fa-google"></i>
                Google
            </button>
            <button type="submit" class="btn btn-social btn-facebook" name="provider" value="Facebook">
                <i class="fab fa-facebook"></i>
                Facebook
            </button>
        </div>
    </form>

    <div class="d-flex justify-content-between my-4">
        <a asp-page="./Login" class="btn btn-login">Login</a>
        <a asp-page="./Register" class="btn btn-register">Registar</a>
    </div>
    <hr />

    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="mb-3">
            <label asp-for="Input.FullName" class="form-label">Nome Completo</label>
            <input asp-for="Input.FullName" class="form-control" autocomplete="fullname" placeholder="Nome Completo" />
            <span asp-validation-for="Input.FullName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.BirthDate" class="form-label">Data de Nascimento</label>
            <input asp-for="Input.BirthDate" class="form-control" autocomplete="bday" placeholder="dd/mm/yyyy" />
            <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Email</label>
            <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Password" class="form-label">Password</label>
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.ConfirmPassword" class="form-label">Confirme a Password</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm Password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-primary">Entrar</button>
        <div class="footer-text">Ao entrar no site estás a aceitar os termos e condições</div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
}