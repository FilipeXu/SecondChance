@page
@model LoginModel

@section Styles {
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        .login-container {
            background-color: #C4E5C2;
            border-radius: 10px;
            padding: 15px;
            width: 100%;
            max-width: 300px;
            margin-bottom: 100px;
        }

        .btn-social {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            font-weight: bold;
            border-radius: 5px;
            text-decoration: none;
            border: 1px solid #000;
            margin-bottom: 8px;
        }

            .btn-social i {
                margin-right: 12px;
            }

        .btn-facebook {
            background-color: #E8F5E9;
            color: #000;
        }

        .btn-google {
            background-color: #E8F5E9;
            color: #000;
        }

        .btn-login, .btn-register {
            width: 47%;
            padding: 8px 16px;
            border-radius: 5px;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
        }

        .btn-login {
            color: #FFF;
            border: 1px solid #000;
            background-color: #68B064;
        }

        .btn-register {
            color: #000;
            border: 1px solid #000;
            background-color: #E8F5E9;
        }

        .form-control {
            border-radius: 0;
            margin-bottom: 5px;
            background-color: #E8F5E9;
            border: 1px solid #000;
            border-radius: 5px;
        }

            .form-control:focus {
                border-color: #000;
                outline: none;
                box-shadow: none;
            }

        .form-label {
            color: #000;
            margin-bottom: 0;
        }

        .btn-primary {
            background-color: #68B064;
            color: #FFF;
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #000;
            margin-top: 10px;
            font-weight: 600;
        }

        #forgot-password {
            text-decoration: none;
            color: #000;
        }

        .text-danger {
            color: red;
            font-size: 13px;
            margin-top: 5px;
        }

        .footer-text {
            text-align: center;
            margin-top: 15px;
            font-size: 12px;
            color: #000;
        }

        hr {
            margin: 16px 0;
            border-top: 1px solid #000;
        }
    </style>
}

@{
    ViewData["Title"] = "Log in";
}

