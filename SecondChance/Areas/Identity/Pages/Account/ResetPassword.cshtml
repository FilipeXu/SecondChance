@page
@model SecondChance.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Redefinir senha";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        .reset-container {
            background-color: #C4E5C2;
            border-radius: 10px;
            padding: 15px;
            width: 100%;
            max-width: 300px;
            margin-bottom: 100px;
        }

        .form-control {
            border-radius: 0;
            margin-bottom: 5px;
            background-color: #E8F5E9;
            border: 1px solid #000;
            border-radius: 5px;
        }

            .form-control:focus {
                border-color: #000;
                outline: none;
                box-shadow: none;
            }

        .form-label {
            color: #000;
            margin-bottom: 0;
        }

        .btn-primary {
            background-color: #68B064;
            color: #FFF;
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #000;
            margin-top: 10px;
            font-weight: 600;
        }

        .text-danger {
            color: red;
            font-size: 13px;
            margin-top: 5px;
        }

        .footer-text {
            text-align: center;
            margin-top: 15px;
            font-size: 12px;
            color: #000;
        }

        hr {
            margin: 16px 0;
            border-top: 1px solid #000;
        }

        .reset-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
            text-align: center;
        }
    </style>
}

<section class="reset-container">
    <div class="reset-title">@ViewData["Title"]</div>
    <hr />

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Input.Code" type="hidden" />

        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Email</label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Password" class="form-label">Nova senha</label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar senha</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-primary">Redefinir</button>
        <div class="footer-text">Ao redefinir sua senha, concorda com os termos e condições</div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
}